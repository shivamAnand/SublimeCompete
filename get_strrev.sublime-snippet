	<content><![CDATA[
void strrev(char *str,int siz = -1)
{
	if(siz == -1)
		siz = strlen(str);
	int i = 0,j = siz - 1;
	while(i<j)
	{
		swap(str[i],str[j]);
		++i;
		--j;
	}
}

]]></content>
